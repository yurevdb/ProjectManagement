<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <FontFamily x:Key="FaSolid">pack://application;,,,/Fonts/Font Awesome 6 Free-Solid-900.otf</FontFamily>
    <FontFamily x:Key="FaRegular">pack://application;,,,/Fonts/Font Awesome 6 Free-Regular-400.otf</FontFamily>
    <FontFamily x:Key="FaBrands">pack://application;,,,/Fonts/Font Awesome 6 Brands-Regular-400.otf</FontFamily>
    
    <sys:Double x:Key="FontSizeNormal">18</sys:Double>
    <sys:Double x:Key="FontSizeLarge">24</sys:Double>
    <sys:Double x:Key="FontSizeExtraLarge">32</sys:Double>

    <sys:String x:Key="FaExternalLink">&#xf35d;</sys:String>
    <sys:String x:Key="FaWindowMinimize">&#xf2d1;</sys:String>
    <sys:String x:Key="FaWindowClose">&#xf410;</sys:String>
    <sys:String x:Key="FaWindowToggle">&#xf2d2;</sys:String>
    
</ResourceDictionary>